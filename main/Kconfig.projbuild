menu "WiFi Configuration"

    config ESP_WIFI_SSID
        string "WiFi SSID (AP Mode)"
        default "ESP32-ConfigAP"
        help
            SSID (network name) for the ESP32 Access Point.

    config ESP_WIFI_PASSWORD
        string "WiFi Password (AP Mode)"
        default "12345678"
        help
            WiFi password (WPA or WPA2) for the ESP32 Access Point.
            Minimum 8 characters required.

    config ESP_WIFI_CHANNEL
        int "WiFi Channel"
        range 1 13
        default 1
        help
            WiFi channel (network channel) for the Access Point.

    config ESP_MAX_STA_CONN
        int "Maximal STA connections"
        default 4
        help
            Max number of stations that can connect to the AP simultaneously.
        
endmenu
